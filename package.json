{
  "name": "bellatrix",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build --target=bun ./src/index.ts --outdir ./dist",
    "compile": "bun build --compile ./src/index.ts --outfile ./bin/bellatrix",
    "db:migrate": "prisma migrate dev --name",
    "db:studio": "prisma studio",
    "dev:webui": "bun --watch ./src/webui/app.tsx"
  },
  "devDependencies": {
    "@biomejs/biome": "1.1.2",
    "@types/tmi.js": "^1.8.3",
    "bun-types": "latest",
    "prisma": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^0.7.0",
    "@prisma/client": "5.2.0",
    "elysia": "^0.7.12",
    "tmi.js": "^1.8.5"
  }
}
