{
  "name": "bellatrix",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build --target=bun ./src/index.ts --outdir ./dist",
    "compile": "bun build --compile ./src/index.ts --outfile ./bin/bellatrix",
    "db:migrate": "prisma migrate dev --name",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "dev:webui": "bun --watch ./src/webui/app.tsx"
  },
  "devDependencies": {
    "@biomejs/biome": "1.1.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "bun-types": "latest",
    "prisma": "^5.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^0.7.0",
    "@elysiajs/static": "^0.7.1",
    "@libsql/client": "^0.4.0-pre.5",
    "@prisma/adapter-libsql": "^5.7.0",
    "@prisma/client": "5.7.0",
    "elysia": "^0.7.12",
    "zod": "^3.22.4"
  }
}
