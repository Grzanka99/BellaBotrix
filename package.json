{
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.21",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --scope=web",
    "dev:bot": "turbo dev --scope=bot",
    "dev:bot-go": "turbo dev --scope=bot-go",
    "build": "turbo build && ./build.sh",
    "postinstall": "bunx prisma generate"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
